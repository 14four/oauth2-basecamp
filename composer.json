{
    "name": "14four/oauth2-basecamp",
    "description": "Basecamp OAuth 2.0 Client Provider for The PHP League OAuth2-Client",
    "type": "oauth, oauth2, client, authorization, basecamp, laravel",
    "require": {
        "league/oauth2-client": "^2.0",
        "illuminate/support": "^5.4"
    },
    "require-dev": {
        "mockery/mockery": "^0.9.9",
        "orchestra/testbench": "^3.4",
        "phpunit/phpunit": "^5.0"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Josh Hagel",
            "email": "joshhagel@linchpinstudios.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "FourteenFour\\Basecamp\\Client\\": "./src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "FourteenFour\\Basecamp\\Client\\Test\\": "./tests/src/"
        }
    },
    "scripts": {
        "getsami": "curl -O http://get.sensiolabs.org/sami.phar",
        "docs": "php sami.phar update sami.php"
    }
}
